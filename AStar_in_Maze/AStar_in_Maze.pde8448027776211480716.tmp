//Board b;
HexBoard b;
AStar<HexAStarNode, HexBoard> aStar;

int xCount = 60;
int yCount = 30;
int cellSize = 8;

void setup(){
  size(901, 901);
  
  //b = new Board(xCount, yCount, 2);
  
  b = new HexBoard(xCount, yCount, cellSize);
  
  for (int i = 0; i < b.getCellCount(); i++){
    HexAStarNode node = b.getCell(i);

    for (ICell n : node.neighbours){
      if (random(1.0) < 0.33){
        node.removeWalls(n);
      }
    }

  }
  
  aStar = new AStar(b.getCell(0, 0), b.getCell(xCount - 1,yCount - 1), b);
  
}

void draw(){
  //translate(0, 0);
  background(0);
  aStar.advanceStep();
  aStar.paintPath();
  b.show();
  if (aStar.finished){
    background(0);
    aStar.paintPath();
    b.show(); //<>//
    translate(0, -yCount * cellSize);
  }
}